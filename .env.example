# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_PROVIDER=snowflake  # Options: snowflake, mongodb (coming soon)

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_TLS=false

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your_account
SNOWFLAKE_USERNAME=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=UNDEFINE
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_ROLE=ACCOUNTADMIN

# Connection Pool Settings
SNOWFLAKE_POOL_SIZE=5  # Number of connections in the pool
SNOWFLAKE_CONNECTION_TIMEOUT=30000  # Connection timeout in ms
SNOWFLAKE_QUERY_TIMEOUT=30000  # Query timeout in ms
SNOWFLAKE_MAX_RETRIES=3  # Maximum number of connection retry attempts
SNOWFLAKE_RETRY_DELAY=1000  # Delay between retries in ms

# Authentication
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h

# Client Configuration
VITE_API_URL=http://localhost:3000

# Monitoring
PROMETHEUS_METRICS_PORT=9090

# API Configuration
API_BASE_URL=http://localhost:3001

# Redis Configuration (if used)
REDIS_URI=redis://localhost:6379

# Server Configuration
SERVER_PORT=3001
SESSION_SECRET=your_session_secret

# Game Configuration
MAX_GUESSES=6
ENABLE_FUZZY_MATCHING=true

# Database Fallback Mode
# Set to true to use local mock data if Snowflake connection fails
USE_FALLBACK_ON_ERROR=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info 